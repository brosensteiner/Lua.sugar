	</category>
	
	<category id="lua.code.snippets.separated-ioread" show="inline separated">
		<title>reading files</title>
	</category>
	
	<category id="lua.code.snippets.separated-assert" show="inline separated">
		<title>assertions</title>
	</category>
	
	<category id="lua.code.snippets.separated-newloop" show="inline separated">
		<title>loops</title>
	</category>
	
	<category id="lua.code.snippets.separated-newfunction" show="inline separated">
		<title>functions</title>
	</category>

