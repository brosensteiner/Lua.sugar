<action-recipes>

<!--new numeric for loop-->
    <snippet id="actions.snippets.lua.function.new-for-loop" category="actions.snippets.lua/lua.code.snippets">
        <title>new numeric for loop</title>
        <text>for ${1:variable} = ${2:from exp1}, ${3:to exp2}, ${4:increment} do
        
	${5:...body...}
        
end
$0</text>
        <syntax-context>language-root.lua, language-root.lua *</syntax-context>
        <text-trigger>nfor</text-trigger>
    </snippet>
    
<!--new generic for loop--><snippet id="actions.snippets.lua.function.new-numeric-for-loop" category="actions.snippets.lua/lua.code.snippets">
        <title>new generic for loop</title>
        <text>for ${1:var-list} in ${2:exp-list} do
        
	${5:...body...}
        
end
$0</text>
        <syntax-context>language-root.lua, language-root.lua *</syntax-context>
        <text-trigger>gfor</text-trigger>
    </snippet>
    
<!--new while loop-->
        <snippet id="actions.snippets.lua.function.new-generic-for-loop" category="actions.snippets.lua/lua.code.snippets">
            <title>new while loop</title>
            <text>while ${1:condition}  do
            
	${2:...body...}
            
end
$0</text>
            <syntax-context>language-root.lua, language-root.lua *</syntax-context>
            <text-trigger>while</text-trigger>
        </snippet>
        
<!--new repeat loop-->
                <snippet id="actions.snippets.lua.function.new-while-loop" category="actions.snippets.lua/lua.code.snippets">
                    <title>new repeat loop</title>
                    <text>repeat
                    
	${1:...body...}
                    
until ${2:condition}
$0</text>
                    <syntax-context>language-root.lua, language-root.lua *</syntax-context>
                    <text-trigger>repeat</text-trigger>
                </snippet>

</action-recipes>