<action-recipes>

	<snippet id="actions.snippets.lua.WrapBraces" category="actions.snippets.lua">
	    <title>auto curly braces</title>
	<text>{${EDITOR_SELECTION:${1:...}}}$0</text>
		<key-equivalent>shift {</key-equivalent>
	    <syntax-context>source.Lua, source.Lua :not(string)</syntax-context>
	</snippet>
	
	<snippet id="actions.snippets.lua.WrapBracket" category="actions.snippets.lua">
		<title>auto square brackets</title>
		<key-equivalent>shift [</key-equivalent>
		<text>[${EDITOR_SELECTION:${1:...}}]$0</text>
		<syntax-context>source.Lua, source.Lua :not(string)</syntax-context>
	</snippet>
	
	<snippet id="actions.snippets.lua.WrapParenthesis" category="actions.snippets.lua">
		<title>auto parenthesis</title>
		<key-equivalent>cmd (</key-equivalent>
		<text>\(${EDITOR_SELECTION:${1:...}}\)$0</text>
		<syntax-context>source.Lua, source.Lua :not(string)</syntax-context>
	</snippet>
	
	<snippet id="actions.snippets.lua.WrapMultiline" category="actions.snippets.lua">
		<title>auto multiline quotes</title>
		<key-equivalent>command shift [</key-equivalent>
		<text>[[
${EDITOR_SELECTION:${1:multiline string}}
]]$0</text>
		<syntax-context>source.Lua, source.Lua :not(escape)</syntax-context>
	</snippet>
	
	<snippet id="actions.snippets.lua.WrapDoubleQuote" category="actions.snippets.lua">
		<title>auto double quotes</title>
		<key-equivalent>option "</key-equivalent>
		<text>"${EDITOR_SELECTION:${1:string}}"$0</text>
		<syntax-context>source.Lua, source.Lua :not(escape)</syntax-context>
	</snippet>
	
	<snippet id="actions.snippets.lua.WrapSingleQuote" category="actions.snippets.lua">
		<title>auto single quotes</title>
		<key-equivalent>shift '</key-equivalent>
		<text>'${EDITOR_SELECTION:${1:string}}'$0</text>
		<syntax-context>source.Lua, source.Lua :not(escape)</syntax-context>
	</snippet>
	
	<snippet id="actions.snippets.lua.WrapInComment" category="actions.snippets.lua">
		<title>wrap in multiline comment</title>
		<key-equivalent>cmd option c</key-equivalent>
		<text>--[[
${EDITOR_SELECTION:${1:comment goes here}}
--]]$0</text>
		<syntax-context>source.Lua, source.Lua :not(escape)</syntax-context>
	</snippet>
	
</action-recipes>